#!/bin/sh
set -eux
if [ "${1:-}" = '-l' ]; then
    target_cmd="ln -sf"
else
    target_cmd="cp"
fi


# python
brew install python
pip2 install pip-review

# node
brew install npm

# ruby
brew install ruby

# perl
brew install perl cpanm
cpanm App::cpanoutdated
ln -sf /usr/local/Cellar/perl/*/bin/cpan-outdated /usr/local/bin/

# this repo's custom scripts
$target_cmd "$PWD"/brewup "$PWD"/upall "$PWD"/perlup /usr/local/bin/
