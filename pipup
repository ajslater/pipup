#!/bin/sh
PIPVERSION=`pip -V | cut -d ' ' -f 2`
printf "Finding outdated packages..."
if [  "$PIPVERSION" \< "1.3" ]; then
  shift
  LIST=`pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U`
else
  LIST=`pip list -loM | grep -v '^Could\ not' | cut -d ' ' -f 1 | tr '\n' ' '`
fi
if [ -n "$LIST" ]; then
    echo upgrading: $LIST
    pip install -U $LIST
else
    echo everything is up to date!
fi
echo done.
